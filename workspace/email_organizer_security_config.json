{
    "security_layers": {
        "encryption": {
            "method": "Fernet",
            "key_derivation": "PBKDF2",
            "salt_length": 16,
            "iterations": 100000
        },
        "threat_detection": {
            "algorithm": "IsolationForest",
            "contamination_rate": 0.1,
            "threshold": 0.7
        }
    },
    "access_control": {
        "authentication": {
            "methods": [
                "multi_factor",
                "adaptive",
                "biometric_optional"
            ],
            "mfa_providers": [
                "google_authenticator",
                "authy",
                "duo_security"
            ]
        },
        "authorization": {
            "type": "role_based",
            "roles": [
                "admin",
                "user",
                "read_only",
                "support"
            ]
        }
    },
    "privacy_protection": {
        "data_minimization": true,
        "retention_policy": {
            "default_retention_days": 90,
            "sensitive_data_retention_days": 30
        },
        "compliance": {
            "gdpr": true,
            "ccpa": true,
            "hipaa": false
        }
    },
    "incident_response": {
        "notification_channels": [
            "email",
            "sms",
            "slack"
        ],
        "severity_levels": {
            "low": {
                "threshold": 0.3,
                "actions": ["log", "notify"]
            },
            "medium": {
                "threshold": 0.6,
                "actions": ["restrict_access", "notify_admin"]
            },
            "high": {
                "threshold": 0.8,
                "actions": ["lock_system", "forensic_capture", "notify_authorities"]
            }
        }
    },
    "monitoring": {
        "log_retention_days": 180,
        "telemetry_collection_interval_seconds": 60,
        "security_scan_frequency": {
            "vulnerability_scan": "weekly",
            "penetration_test": "quarterly"
        }
    },
    "neurodivergent_security_design": {
        "alert_style": {
            "cognitive_load": "low",
            "visual_clarity": "high",
            "customization_options": true
        },
        "notification_preferences": {
            "minimal_disruption": true,
            "clear_explanations": true,
            "visual_indicators": true
        }
    }
}