{
    "self_healing_strategies": {
        "performance_monitoring": {
            "check_interval_seconds": 60,
            "anomaly_detection": {
                "method": "isolation_forest",
                "contamination_rate": 0.1
            },
            "thresholds": {
                "cpu_usage_critical": 90,
                "memory_usage_critical": 85,
                "disk_usage_critical": 90
            }
        },
        "security_monitoring": {
            "check_interval_seconds": 300,
            "auto_patch_enabled": true,
            "vulnerability_scan_depth": "comprehensive"
        },
        "dependency_management": {
            "check_interval_seconds": 180,
            "auto_recovery_enabled": true,
            "retry_attempts": 3
        }
    },
    "healing_actions": {
        "performance_degradation": [
            "restart_application",
            "clear_memory_cache",
            "scale_resources"
        ],
        "memory_leak": [
            "restart_application",
            "force_garbage_collection"
        ],
        "resource_exhaustion": [
            "scale_resources",
            "optimize_resource_allocation"
        ],
        "dependency_failure": [
            "restart_dependencies",
            "failover_mechanism"
        ]
    },
    "logging_and_reporting": {
        "log_retention_days": 90,
        "log_levels": {
            "performance": "INFO",
            "security": "WARNING",
            "dependency": "ERROR"
        },
        "notification_channels": [
            "email",
            "slack",
            "sms"
        ]
    },
    "accessibility_considerations": {
        "notification_style": {
            "cognitive_load": "low",
            "clarity_level": "high",
            "neurodivergent_friendly": true
        },
        "alert_types": {
            "visual_indicators": true,
            "sound_alerts": false,
            "vibration_patterns": true
        }
    }
}